{{!< default}}

{{> "header_nav" }}

<main id="content" role="main">
    {{#author}}
    <div class="container space-top-3 space-bottom-2">
        <div class="border-bottom w-md-75 w-lg-60 space-bottom-2 mx-md-auto">
            <div class="media d-block d-sm-flex">
                <div class="position-relative mx-auto mb-3 mb-sm-0 mr-sm-4" style="width: 160px; height: 160px;">
                    <img class="img-fluid rounded-circle" src="{{profile_image}}" alt="{{name}}" width="160" height="160">
                    <img class="bg-white position-absolute bottom-0 right-0 rounded-circle p-1" src="data:image/svg+xml;base64," alt="Icon" width="36" height="36" title="Top Writer">
                </div>

                <div class="media-body mt-3">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <h1 class="h3">{{name}}</h1>
                        {{#if twitter}}
                            <div class="d-block">
                                <a href="{{twitter_url}}" target="_blank" class="btn btn-xs btn-outline-primary font-weight-bold text-nowrap ml-1">Follow</a>
                            </div>
                        {{/if}}
                    </div>

                    <p class="mb-0">{{bio}}</p>
                </div>
            </div>
        </div>
    </div>
    {{/author}}

    <!-- Blog Listing Section -->
    <div class="container space-bottom-3">
        <div class="w-md-75 w-lg-60 mx-md-auto">

            {{#foreach posts visibility="all"}}

                <article class="card mb-3 mb-sm-5">
                    <a href="{{url}}">
                        <img class="card-img-top" src="{{img_url feature_image size="l"}}" alt="{{title}}">
                    </a>

                    <div class="card-body">
                        {{#if tags}}
                            {{#foreach tags}}
                                <a class="d-block small font-weight-bold text-cap mb-2" href="{{url}}">{{name}}</a>{{#if @last}}{{else}}, {{/if}}
                            {{/foreach}}
                        {{/if}}

                        <h2 class="h3"><a class="text-inherit" href="{{url}}">{{title}}</a></h2>

                        <p>{{excerpt}}</p>

                        <div class="media align-items-center pt-5">
                            {{#primary_author}}
                            <div class="avatar-group">
                                <div class="avatar avatar-xs avatar-circle" data-toggle="tooltip" data-placement="top">
                                    <img class="avatar-img" src="{{profile_image}}" alt="{{name}}">
                                </div>
                            </div>
                            {{/primary_author}}
                            <div class="media-body d-flex justify-content-end text-muted font-size-1 ml-2">
                                <time datetime="{{date format="YYYY-MM-DD"}}">{{date format="D MMM YYYY"}}</time >&nbsp;<span class="bull">&bull;</span>&nbsp;{{reading_time}}
                            </div>
                        </div>
                    </div>
                </article>

            {{/foreach}}

            <div class="space-bottom-2"></div>

            {{pagination}}
        </div>
    </div>
    <!-- End Blog Listing Section -->
</main>